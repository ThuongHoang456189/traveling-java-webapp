<?xml version="1.0" encoding="UTF-8"?>

<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <display-name>Archetype Created Web Application</display-name>

    <error-page>
        <error-code>404</error-code>
        <location>/error-404-page.html</location>
    </error-page>
    <error-page>
        <location>/default-error-page.html</location>
    </error-page>

    <servlet>
        <servlet-name>MainController</servlet-name>
        <display-name>MainController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <display-name>LoginController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <display-name>LogoutController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TourInsertionController</servlet-name>
        <display-name>TourInsertionController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.TourInsertionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TourSearchingController</servlet-name>
        <display-name>TourSearchingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.TourSearchingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartInsertionController</servlet-name>
        <display-name>CartInsertionController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartInsertionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartStatusController</servlet-name>
        <display-name>CartStatusController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartStatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartShowingController</servlet-name>
        <display-name>CartShowingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartShowingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartRemovingController</servlet-name>
        <display-name>CartRemovingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartRemovingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderingController</servlet-name>
        <display-name>OrderingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.OrderingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmationController</servlet-name>
        <display-name>ConfirmationController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.ConfirmationController</servlet-class>
    </servlet>
    <servlet>
        <description>
        </description>
        <display-name>PaymentAuthorizationController</display-name>
        <servlet-name>PaymentAuthorizationController</servlet-name>
        <servlet-class>thuonghth.controllers.PaymentAuthorizationController</servlet-class>
    </servlet>
    <servlet>
        <description>
    	</description>
        <display-name>PaymentRevisionController</display-name>
        <servlet-name>PaymentRevisionController</servlet-name>
        <servlet-class>thuonghth.controllers.PaymentRevisionController</servlet-class>
    </servlet>
    <servlet>
        <description>
        </description>
        <display-name>PaymentExecutionController</display-name>
        <servlet-name>PaymentExecutionController</servlet-name>
        <servlet-class>thuonghth.controllers.PaymentExecutionController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourInsertionController</servlet-name>
        <url-pattern>/insertTour</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourSearchingController</servlet-name>
        <url-pattern>/searchTour</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartInsertionController</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartStatusController</servlet-name>
        <url-pattern>/changeCartStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartShowingController</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartRemovingController</servlet-name>
        <url-pattern>/removeFromCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderingController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmationController</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentAuthorizationController</servlet-name>
        <url-pattern>/authorizePayment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentRevisionController</servlet-name>
        <url-pattern>/reviewPayment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentExecutionController</servlet-name>
        <url-pattern>/executePayment</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>DreamTravelingDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>

    <listener>
        <listener-class>thuonghth.listeners.ContextListener</listener-class>
    </listener>
</web-app>
